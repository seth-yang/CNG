<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="form_label">
        <item name="android:textSize">@dimen/form_label_font_size</item>
    </style>
    <style name="inner_button">
        <item name="android:layout_marginLeft">20sp</item>
    </style>

    <style name="form_title" parent="AppTheme">
        <item name="android:layout_margin">@dimen/form_title_margin</item>
        <item name="android:textColor">#d32121</item>
        <item name="android:textSize">@dimen/form_title_font_size</item>
    </style>
    <style name="form_label_right" parent="form_label">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="setup_label" parent="form_label_right">
        <item name="android:textSize">@dimen/list_item_font_size</item>
        <item name="android:paddingRight">@dimen/list_item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
    </style>
    <style name="setup_item" parent="setup_label">
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="dialog_title" parent="setup_label">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/form_title_margin</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="splash_label" parent="form_label">
        <item name="android:paddingLeft">@dimen/form_title_margin</item>
    </style>
    <style name="dialog_button" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingRight">30sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingLeft">30sp</item>
    </style>
    <style name="action_bar_background" parent="AppTheme">
        <item name="android:background">#dd000000</item>
        <item name="android:paddingTop">@dimen/action_bar_vertical_padding</item>
        <item name="android:paddingRight">@dimen/action_bar_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/action_bar_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/action_bar_horizontal_padding</item>
    </style>
    <style name="action_bar_item" parent="AppTheme">
        <item name="android:drawablePadding">10sp</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="action_bar_background.black" parent="action_bar_background">
        <item name="android:background">#000000</item>
    </style>
    <style name="cp_item" parent="AppTheme">
        <item name="android:drawablePadding">10sp</item>
        <item name="android:textSize">@dimen/control_panel_item_font_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#5c5c5c</item>
        <item name="android:paddingLeft">25sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingRight">25sp</item>
        <item name="android:paddingBottom">10sp</item>
        <!--<item name="android:background">@drawable/grid_item_background</item>-->
    </style>
    <style name="cp_item.current" parent="cp_item">
        <item name="android:textSize">@dimen/control_panel_item_font_size</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:background">#333</item>
    </style>
    <style name="separator_v" parent="AppTheme">
        <item name="android:width">2sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#333</item>
    </style>
    <style name="separator_h" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">2sp</item>
        <item name="android:background">#333</item>
    </style>
</resources>
